{% extends 'page.html.twig' %}

{% block title %}{{ fromage.nom }}{% endblock %}
{% block page %}
<div class="row">

    <div class="col-lg-8">
        <div class="card my-4">
            <img class="card-img-top img-fluid" src="{{ fromage.img }}" alt="">
            <div class="card-body">
                <h3 class="card-title">{{ fromage.nom }}</h3>
                <h4>{{ fromage.prix }}€</h4>
                <p class="card-text">
                    {{ fromage.type.nom }} <br />
                    {{ fromage.lait.nom }}
                </p>
            </div>
        </div>
    </div> <!-- /.col-lg-3 -->

    <div class="col-lg-4">

        <div class="card card-outline-secondary my-4">
            <div class="card-header">Avis</div>
            <div class="card-body">
                {% for avi in avis %}
                    <p class="text-warning">
                        {% for i in 1..5 %}
                            {{ avi.note >= i ? "&#9733; " : "&#9734;" }}
                        {% endfor %}
                    </p>
                    <p>{{ avi.texte }}</p>
                    <small class="text-muted">Par <a href="{{ path('user', { id: avi.utilisateur.id }) }}">{{ avi.utilisateur.nom }}</a>, le 20 septembre 2019</small>
                    <hr>
                {% endfor %}
                <a href="#" class="btn btn-success">Donner un avis</a>
            </div>
        </div> <!-- /.card -->

    </div> <!-- /.col-lg-9 -->
    <div class="col-lg-3"> </div>

</div> <!-- /.row -->
<div class="row pb-4">
  <div class="col-3"> </div>
  <div class="col-2">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addCart">Ajouter au panier</button>
  </div>
</div>

<div class="modal fade" id="addCart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Veuillez renseigner la quantité</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <form class="form-signin text-center bg-white" action="{{ path('addToCart', { 'id': fromage.id }) }}" method="post">
          <a> Quantité : <input type="number" name="_qt" value="1" step="1" min="1" max="999"></a>
      </div>
      <div class="modal-footer">
          <button class="btn btn-lg btn-success btn-block" type="submit">Ajouter au panier</button>
          </form>
      </div>
    </div>
  </div>
</div>

{% endblock %}
